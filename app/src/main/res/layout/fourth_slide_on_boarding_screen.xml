<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!-- Logo -->
    <ImageView
        android:id="@+id/fourth_slide_img_on_boarding_screen"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:src="@drawable/fourth_slide"
        android:layout_centerHorizontal="true" />

    <!-- Text OnBoarding Screen -->
    <TextView
        android:id="@+id/first_slide_on_boarding_screen_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fourth_slide_img_on_boarding_screen"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/fourth_slide_tuto_txt"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>