<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.HomeFragment"
    android:layout_marginTop="-45dp">

    <!-- SUMMARY AREA -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- Balance Section -->
        <RelativeLayout
            android:layout_width="390dp"
            android:layout_height="130dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/home_card"
            android:backgroundTint="@color/sandy_brown">

            <!-- text -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:paddingStart="30dp"
                android:paddingTop="10dp">

                <!-- title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:textColor="@color/white"
                    android:text="Balance" />

                <!-- value -->
                <TextView
                    android:id="@+id/balance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="50dp"
                    android:textStyle="bold"
                    android:textSize="50dp"
                    android:textColor="@color/white" />
            </RelativeLayout>

        </RelativeLayout>
        <!-- End of Balance Section -->

        <!-- Income Section -->
        <RelativeLayout
            android:layout_width="390dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="215dp"
            android:background="@drawable/home_card"
            android:backgroundTint="@color/heliotrope">

            <!-- text -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:paddingStart="30dp"
                android:paddingTop="10dp">

                <!-- title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    android:text="Income" />

                <!-- value -->
                <TextView
                    android:id="@+id/income"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="32dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/white" />

            </RelativeLayout>

        </RelativeLayout>
        <!-- End of Income Section -->

        <!-- Expense Section -->
        <RelativeLayout
            android:layout_width="390dp"
            android:layout_height="90dp"
            android:layout_marginStart="215dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/home_card"
            android:backgroundTint="@color/salmon">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:paddingStart="30dp"
                android:paddingTop="10dp">
                <!-- title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    android:text="Expense" />

                <!-- value -->
                <TextView
                    android:id="@+id/expense"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="32dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>

        </RelativeLayout>
        <!-- End of Expense Section -->

    </RelativeLayout>

    <!-- DETAILED EXPENSE OR INCOME AREA-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:layout_marginStart="-15dp">

        <!-- expense of today -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!-- date -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="175dp"
                android:layout_marginTop="350dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Today" />

            <!-- total of the day -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="320dp"
                android:layout_marginTop="350dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="-$215" />

            <!-- detail of the day -->
            <!-- food -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginTop="380dp"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:text="🍔" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="80dp"
                android:layout_marginTop="390dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Food" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="320dp"
                android:layout_marginTop="390dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="-$15" />

            <!-- phone -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginTop="430dp"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:text="📱" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="80dp"
                android:layout_marginTop="440dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Advice" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="320dp"
                android:layout_marginTop="440dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="-$200" />
        </RelativeLayout>

        <!-- expense of feb 21 -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- date -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="175dp"
                android:layout_marginTop="490dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Feb 21" />

            <!-- total of the day -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="320dp"
                android:layout_marginTop="490dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="-$75" />

            <!-- detail of the day -->
            <!-- sport -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginTop="520dp"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:text="⚽" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="80dp"
                android:layout_marginTop="530dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Sport" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="320dp"
                android:layout_marginTop="530dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="-$25" />

            <!-- gift -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginTop="570dp"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:text="🎁" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="80dp"
                android:layout_marginTop="580dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Gift" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="320dp"
                android:layout_marginTop="580dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="-$50" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>