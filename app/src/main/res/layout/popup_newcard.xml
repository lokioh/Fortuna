<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <!-- HEADER -->
    <!-- title -->
    <TextView
        android:id="@+id/titleAddNewCreditCardPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Add new credit card"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <!-- BODY -->
    <!-- name section -->
    <TextView
        android:id="@+id/nameAddNewCreditCardPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Name :"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editTextNamePopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <!-- balance section -->
    <TextView
        android:id="@+id/balanceAddNewCreditCardPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Balance :"
        android:textSize="18dp" />


    <EditText
        android:id="@+id/editTextBalancePopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <!-- FOOTER -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- cancel button -->
        <Button
            android:id="@+id/cancelButtonAddNewCreditCardPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/red"
            android:text="Cancel" />

        <!-- confirm button -->
        <Button
            android:id="@+id/addButtonAddNewCreditCardPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="23dp"
            android:backgroundTint="@color/green"
            android:text="Add" />

    </LinearLayout>

</LinearLayout>