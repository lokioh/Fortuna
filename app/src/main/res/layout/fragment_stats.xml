            android:layout_height="25dp"
            android:layout_above="@id/progressBar_home"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!-- progress bar begin -->
        <ProgressBar
            android:id="@+id/progressBar_home"
